<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item
    >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <solid android:color="@color/colorPrimaryDark" />
        <corners
            android:bottomRightRadius="@dimen/view_corner"
            android:topRightRadius="@dimen/view_corner"
            android:topLeftRadius="@dimen/view_corner"
            android:bottomLeftRadius="@dimen/view_corner" />
    </shape>
</item>
<item
    android:left="2dp"
    android:top="2dp"
    android:bottom="2dp"
    android:right="2dp" >

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <solid android:color="@color/white" />
        <corners
            android:bottomRightRadius="@dimen/view_corner_inner"
            android:topRightRadius="@dimen/view_corner_inner"
            android:topLeftRadius="@dimen/view_corner_inner"
            android:bottomLeftRadius="@dimen/view_corner_inner" />
    </shape>
</item>
</layer-list>