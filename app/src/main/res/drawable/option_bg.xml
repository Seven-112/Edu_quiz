<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">


            <gradient

                android:angle="90"
                android:endColor="@color/primary_light_green"
                android:startColor="@color/primary_mid_green" />
            <size
                android:width="@dimen/option_btn_height"
                android:height="@dimen/option_btn_height" />
        </shape>
    </item>
    <item
        android:bottom="3.5dip"
        android:left="3.5dp"
        android:right="3.5dip"
        android:top="3.5dip">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/gray1" />

            <gradient
                android:angle="90"
                android:endColor="@color/primary_mid_green"
                android:startColor="@color/primary_light_green" />
            <size
                android:width="@dimen/option_btn_height"
                android:height="@dimen/option_btn_height" />
        </shape>
    </item>
</layer-list>