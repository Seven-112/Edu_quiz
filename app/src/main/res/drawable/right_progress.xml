<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dip" />
            <stroke
                android:width="1.5px"
                android:color="@color/wrong_dark" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <gradient
                    android:centerColor="@color/wrong_dark"
                    android:endColor="@color/wrong_dark"
                    android:startColor="@color/wrong_dark" />
                <corners android:radius="10dp" />
            </shape>
        </clip>
    </item>
</layer-list>