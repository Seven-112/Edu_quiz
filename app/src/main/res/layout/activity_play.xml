<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_bg">

        <include layout="@layout/toolbar_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolBar">

            <RelativeLayout
                android:id="@+id/checkLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvNoConnection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/msg_no_internet"
                    android:textSize="@dimen/default_text_size" />

                <Button
                    android:id="@+id/btnTry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNoConnection"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_dp"
                    android:background="@drawable/new_btn_bg"
                    android:paddingStart="@dimen/circle_progress"
                    android:paddingEnd="@dimen/circle_progress"
                    android:text="@string/try_again"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/drop_shadow" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/innerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/divider"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/wave_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr">


                    <LinearLayout
                        android:id="@+id/score_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/left_rigth_margin_score_button"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgCoin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="3dp"
                                android:src="@drawable/coins" />

                            <TextView
                                android:id="@+id/coin_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginStart="@dimen/left_rigth_margin_score_button"
                                android:text="@string/zero"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.brightfuture.eduquiz.helper.CircularProgressIndicator
                                android:id="@+id/progressBarTwo"
                                android:layout_width="@dimen/progress_h_w"
                                android:layout_height="@dimen/progress_h_w"
                                android:background="@drawable/timer_bg"
                                app:direction="counterclockwise" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/imgScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:src="@drawable/score" />

                            <TextView
                                android:id="@+id/txtScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/left_rigth_margin_score_button"
                                android:text="@string/zero"

                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black" />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bottom_panel"
                    android:layout_below="@+id/wave_layout">


                    <RelativeLayout
                        android:id="@+id/main_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ScrollView
                            android:id="@+id/mainScroll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal"
                                        android:weightSum="5">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.6"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/txtTrueQuestion"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/zero"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                                android:textColor="@color/wrong_dark" />

                                            <RelativeLayout
                                                android:layout_width="15dp"
                                                android:layout_height="@dimen/que_img_height"
                                                android:layout_marginTop="@dimen/left_rigth_margin_score_button"
                                                android:gravity="center">

                                                <ProgressBar
                                                    android:id="@+id/rightProgress"
                                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"

                                                    android:progressDrawable="@drawable/right_progress" />
                                            </RelativeLayout>
                                        </LinearLayout>

                                        <androidx.cardview.widget.CardView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="3.8"
                                            android:layoutDirection="ltr"
                                            app:cardBackgroundColor="@color/white"
                                            app:cardCornerRadius="20dp"
                                            app:cardElevation="0dp">


                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/img_que_height"
                                                android:background="@drawable/question_bg">

                                                <ScrollView
                                                    android:id="@+id/queScroll"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent">

                                                    <RelativeLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="@dimen/img_que_height">

                                                        <TextView
                                                            android:id="@+id/txtQuestion"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_centerInParent="true"
                                                            android:layout_margin="@dimen/left_rigth_margin_score_button"
                                                            android:gravity="center"
                                                            android:text="@string/app_name"
                                                            android:textColor="@color/black"
                                                            android:textSize="15dp" />
                                                    </RelativeLayout>
                                                </ScrollView>

                                                <com.brightfuture.eduquiz.helper.TouchImageView
                                                    android:id="@+id/imgQuestion"
                                                    android:layout_width="@dimen/img_width"
                                                    android:layout_height="@dimen/img_height"
                                                    android:layout_centerInParent="true"
                                                    android:src="@drawable/ic_launcher" />


                                                <ProgressBar
                                                    android:id="@+id/imgProgress"
                                                    style="?android:attr/progressBarStyleSmall"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:visibility="gone" />

                                                <ImageView
                                                    android:id="@+id/imgZoom"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentBottom="true"
                                                    android:layout_toStartOf="@+id/imgMic"
                                                    android:visibility="visible"
                                                    android:tint="@color/black"
                                                    app:srcCompat="@drawable/ic_zoom" />

                                                <ImageView
                                                    android:id="@+id/imgMic"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_alignParentBottom="true"
                                                    android:layout_marginEnd="@dimen/left_rigth_margin_score_button"
                                                    android:paddingStart="5dp"
                                                    android:paddingEnd="5dp"
                                                    android:visibility="visible"
                                                    android:tint="@color/black"
                                                    app:srcCompat="@drawable/ic_mic1" />
                                            </RelativeLayout>

                                        </androidx.cardview.widget.CardView>

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="0.6"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/txtFalseQuestion"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"

                                                android:gravity="center"
                                                android:text="@string/zero"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                                android:textColor="@color/right_dark" />

                                            <RelativeLayout
                                                android:layout_width="15dp"
                                                android:layout_height="@dimen/que_img_height"
                                                android:layout_marginTop="@dimen/left_rigth_margin_score_button"
                                                android:gravity="center">

                                                <ProgressBar
                                                    android:id="@+id/wrongProgress"
                                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:progressDrawable="@drawable/wrong_progress" />
                                            </RelativeLayout>
                                        </LinearLayout>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:id="@+id/layout_answare"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/txtQuestion1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:layout_centerHorizontal="true"
                                            android:layout_marginStart="@dimen/left_rigth_margin_score_button"
                                            android:layout_marginTop="@dimen/left_rigth_margin_score_button"
                                            android:layout_marginEnd="@dimen/left_rigth_margin_score_button"
                                            android:gravity="center"
                                            android:padding="5dp"
                                            android:text="@string/app_name"
                                            android:textColor="@color/black"
                                            android:textSize="15dp"
                                            android:visibility="visible" />


                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/left_rigth_margin_score_button"
                                        android:orientation="vertical">

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/a_layout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="@dimen/left_rigth_margin_score_button"
                                            android:layout_marginEnd="16dp"
                                            app:cardBackgroundColor="@color/white"
                                            app:cardCornerRadius="@dimen/view_corner"
                                            app:cardElevation="5dp">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:id="@+id/option_a"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="3dp"
                                                    android:background="@drawable/option_bg"
                                                    android:gravity="center"
                                                    android:text="@string/a"
                                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                                    android:textColor="@color/white"
                                                    android:textStyle="bold"
                                                    android:visibility="visible" />

                                                <TextView
                                                    android:id="@+id/btnOpt1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_centerVertical="true"
                                                    android:layout_marginEnd="5dp"
                                                    android:layout_toStartOf="@+id/progress_A"
                                                    android:layout_toEndOf="@+id/option_a"
                                                    android:paddingTop="4dp"
                                                    android:paddingBottom="4dp"
                                                    android:text="@string/answer"
                                                    android:textColor="@color/black" />


                                                <com.brightfuture.eduquiz.helper.CircularProgressIndicator2
                                                    android:id="@+id/progress_A"
                                                    android:layout_width="@dimen/circle_progress"
                                                    android:layout_height="@dimen/circle_progress"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="2dp"
                                                    android:background="@drawable/aud_progress_bg"
                                                    android:visibility="visible"
                                                    app:direction="clockwise" />
                                            </RelativeLayout>
                                        </androidx.cardview.widget.CardView>


                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/b_layout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="@dimen/left_rigth_margin_score_button"
                                            android:layout_marginEnd="16dp"
                                            app:cardBackgroundColor="@color/white"
                                            app:cardCornerRadius="@dimen/view_corner"
                                            app:cardElevation="5dp">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:id="@+id/option_b"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="3dp"
                                                    android:background="@drawable/option_bg"
                                                    android:gravity="center"
                                                    android:text="@string/b"
                                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                                    android:textColor="@color/white"
                                                    android:textStyle="bold"
                                                    android:visibility="visible" />


                                                <TextView
                                                    android:id="@+id/btnOpt2"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_centerVertical="true"
                                                    android:layout_marginEnd="5dp"
                                                    android:layout_toStartOf="@+id/progress_B"
                                                    android:layout_toEndOf="@+id/option_b"
                                                    android:paddingTop="4dp"
                                                    android:paddingBottom="4dp"
                                                    android:text="@string/answer"
                                                    android:textColor="@color/black" />

                                                <com.brightfuture.eduquiz.helper.CircularProgressIndicator2
                                                    android:id="@+id/progress_B"
                                                    android:layout_width="@dimen/circle_progress"
                                                    android:layout_height="@dimen/circle_progress"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="2dp"
                                                    android:background="@drawable/aud_progress_bg"
                                                    android:visibility="visible"
                                                    app:direction="clockwise" />

                                            </RelativeLayout>
                                        </androidx.cardview.widget.CardView>

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/c_layout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="@dimen/left_rigth_margin_score_button"
                                            android:layout_marginEnd="16dp"
                                            app:cardBackgroundColor="@color/white"
                                            app:cardCornerRadius="@dimen/view_corner"
                                            app:cardElevation="5dp">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:id="@+id/option_c"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="3dp"
                                                    android:background="@drawable/option_bg"
                                                    android:gravity="center"
                                                    android:text="@string/c"
                                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                                    android:textColor="@color/white"
                                                    android:textStyle="bold"
                                                    android:visibility="visible" />


                                                <TextView
                                                    android:id="@+id/btnOpt3"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_centerVertical="true"
                                                    android:layout_marginEnd="5dp"
                                                    android:layout_toStartOf="@+id/progress_C"

                                                    android:layout_toEndOf="@+id/option_c"
                                                    android:paddingTop="4dp"
                                                    android:paddingBottom="4dp"
                                                    android:text="@string/answer"
                                                    android:textColor="@color/black" />

                                                <com.brightfuture.eduquiz.helper.CircularProgressIndicator2
                                                    android:id="@+id/progress_C"
                                                    android:layout_width="@dimen/circle_progress"
                                                    android:layout_height="@dimen/circle_progress"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="2dp"
                                                    android:background="@drawable/aud_progress_bg"
                                                    android:visibility="visible"
                                                    app:direction="clockwise" />
                                            </RelativeLayout>

                                        </androidx.cardview.widget.CardView>


                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/d_layout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="@dimen/left_rigth_margin_score_button"
                                            android:layout_marginEnd="16dp"
                                            android:layout_marginBottom="@dimen/left_rigth_margin_score_button"
                                            app:cardBackgroundColor="@color/white"
                                            app:cardCornerRadius="@dimen/view_corner"
                                            app:cardElevation="5dp">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:id="@+id/option_d"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="3dp"
                                                    android:background="@drawable/option_bg"
                                                    android:gravity="center"
                                                    android:text="@string/d"
                                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                                    android:textColor="@color/white"
                                                    android:textStyle="bold"
                                                    android:visibility="visible" />


                                                <TextView
                                                    android:id="@+id/btnOpt4"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_centerVertical="true"
                                                    android:layout_marginEnd="5dp"
                                                    android:layout_toStartOf="@+id/progress_D"
                                                    android:layout_toEndOf="@+id/option_d"
                                                    android:paddingTop="4dp"
                                                    android:paddingBottom="4dp"
                                                    android:text="@string/answer"
                                                    android:textColor="@color/black" />

                                                <com.brightfuture.eduquiz.helper.CircularProgressIndicator2
                                                    android:id="@+id/progress_D"
                                                    android:layout_width="@dimen/circle_progress"
                                                    android:layout_height="@dimen/circle_progress"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_centerVertical="true"
                                                    android:layout_margin="2dp"
                                                    android:background="@drawable/aud_progress_bg"
                                                    android:visibility="visible"
                                                    app:direction="clockwise" />
                                            </RelativeLayout>
                                        </androidx.cardview.widget.CardView>

                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </ScrollView>
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bottom_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:layoutDirection="ltr">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <RelativeLayout
                            android:id="@+id/lytFifty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/left_rigth_margin_score_button"
                            android:layout_marginEnd="@dimen/left_rigth_margin_score_button"
                            android:background="@drawable/achievement_bg">

                            <ImageView
                                android:id="@+id/fifty_fifty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/fifty" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lytSkip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/left_rigth_margin_score_button"
                            android:layout_marginEnd="@dimen/left_rigth_margin_score_button"
                            android:background="@drawable/logout_bg">

                            <ImageView
                                android:id="@+id/skip_quation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/skip" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lytAudience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/left_rigth_margin_score_button"
                            android:layout_marginEnd="@dimen/left_rigth_margin_score_button"
                            android:background="@drawable/setting_bg">

                            <ImageView
                                android:id="@+id/audience_poll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/audiance" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lytReset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/left_rigth_margin_score_button"
                            android:layout_marginEnd="@dimen/left_rigth_margin_score_button"
                            android:background="@drawable/reset_bg">

                            <ImageView
                                android:id="@+id/reset_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/timer" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

